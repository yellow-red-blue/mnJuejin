/* pages/hot/index.wxss */
.hot {
  background: #f8f8f8;
  overflow: hidden;
}
.hot-item {
  background: white;
  padding: 20px;
  border-bottom: 1rpx solid #e7e7e7;
  margin-bottom: 10px;
  box-shadow: 0 2px 4px #e7e7e7;
}
.hot-person {
  display: flex;
}
.hot-avator {
  flex: 0 0 50px;
}
.hot-avator image {
  width: 40px;
  height: 40px;
  border-radius: 50%;
}
.hot-right {
  flex: 1;
}
.hot-person-username {
  font-size: 14px;
  font-weight: 600;
  color: #333333;
}
.person-desc {
  margin-right: 10px;
}
.hot-person-desc {
  margin-top: 4px;
  font-size: 12px;
  color: #999999;
}
.hot-content-detail {
  font-size: 14px;
  line-height: 18px;
}
.hot-image {
  margin-top: 10px;
}